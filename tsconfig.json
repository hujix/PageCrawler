{
  "compilerOptions": {
    "target": "ES6",
    "rootDir": "./",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["app/**/*.ts", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
